datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  displayName   String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  avatarUrl     String?
  githubUrl     String?
  timezone      String?   @default("UTC")
  status        String    @default("ONLINE")
  lastSeenAt    DateTime  @default(now())
  
  accounts      Account[]
  sessions      Session[]
  
  memberships   WorkspaceMember[]
  channelMemberships ChannelMember[]
  messages      Message[]
  reactions     Reaction[]
  channelsCreated Channel[]
  starredChannels StarredChannel[]
  bookmarkedMessages BookmarkedMessage[]
  hiddenUsers   HiddenUser[] @relation("UserHides")
  hiddenBy      HiddenUser[] @relation("HiddenByUsers")
  allowedPostingChannels ChannelPostingAllowedMember[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  notificationsReceived Notification[] @relation("UserNotifications")
  notificationsTriggered Notification[] @relation("UserTriggeredNotifications")
  
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  ownerId   String
  inviteCode String  @unique @default(cuid())

  members   WorkspaceMember[]
  channels  Channel[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("workspaces")
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

model WorkspaceMember {
  id          String   @id @default(uuid())
  workspaceId String
  userId      String
  role        MemberRole @default(MEMBER)
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt    DateTime @default(now())

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

enum ChannelType {
  PUBLIC
  PRIVATE
}

enum ChannelPostingPermission {
  EVERYONE
  ADMIN_ONLY
  OWNER_ONLY
  SELECTED_MEMBERS
}

model Channel {
  id          String   @id @default(uuid())
  workspaceId String
  name        String
  type        ChannelType @default(PUBLIC)
  topics      String[]    @default([])
  description String?
  isArchived  Boolean     @default(false)
  postingPermission ChannelPostingPermission @default(EVERYONE)
  
  postingAllowedMembers ChannelPostingAllowedMember[]
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  messages    Message[]
  creatorId   String?
  creator     User?     @relation(fields: [creatorId], references: [id])
  starredBy   StarredChannel[]
  members     ChannelMember[]
  pinnedMessages PinnedMessage[]



  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([workspaceId, name])
  @@map("channels")
}

model ChannelMember {
  id        String   @id @default(uuid())
  channelId String
  userId    String
  
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  joinedAt  DateTime @default(now())
  lastViewedAt DateTime @default(now())
  
  @@unique([channelId, userId])
  @@map("channel_members")
}

model ChannelPostingAllowedMember {
  id        String   @id @default(uuid())
  channelId String
  userId    String
  
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([channelId, userId])
  @@map("channel_posting_allowed_members")
}

model StarredChannel {
  id        String   @id @default(uuid())
  userId    String
  channelId String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, channelId])
  @@map("starred_channels")
}

enum MessageType {
  REGULAR
  SYSTEM
}

model Message {
  id          String   @id @default(uuid())
  content     String
  type        MessageType @default(REGULAR)
  channelId   String
  userId      String
  parentId    String?  // For threads
  scheduledAt DateTime? // For scheduled messages (null = send immediately)
  isPinned    Boolean  @default(false)

  channel     Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent      Message? @relation("Thread", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Message[] @relation("Thread")
  
  attachments Attachment[]
  reactions   Reaction[]
  bookmarks   BookmarkedMessage[]
  pins        PinnedMessage[]

  isDeleted   Boolean  @default(false)
  isEdited    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("messages")
}

model Attachment {
  id        String   @id @default(uuid())
  messageId String
  url       String
  type      String   // image, file, etc.
  name      String
  size      Int
  
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  
  @@map("attachments")
}

model Reaction {
  id        String   @id @default(uuid())
  messageId String
  userId    String
  emoji     String
  
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([messageId, userId, emoji])
  @@map("reactions")
}

model HiddenUser {
  id           String   @id @default(uuid())
  userId       String   // The user who is hiding
  hiddenUserId String   // The user being hidden
  
  user         User     @relation("UserHides", fields: [userId], references: [id], onDelete: Cascade)
  hiddenUser   User     @relation("HiddenByUsers", fields: [hiddenUserId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  
  @@unique([userId, hiddenUserId])
  @@map("hidden_users")
}

model BookmarkedMessage {
  id        String   @id @default(uuid())
  userId    String
  messageId String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([userId, messageId])
  @@map("bookmarked_messages")
}

model PinnedMessage {
  id        String   @id @default(uuid())
  channelId String
  messageId String
  pinnedBy  String
  
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([channelId, messageId])
  @@map("pinned_messages")
}

enum NotificationType {
  MENTION
  REPLY
  REACTION
  CHANNEL_ADD
  CHANNEL_REMOVE
  CHANNEL_ARCHIVE
  CHANNEL_DELETE
  PIN
}

model Notification {
  id           String           @id @default(uuid())
  userId       String
  actorId      String
  type         NotificationType
  resourceId   String
  resourceType String           // e.g. "message", "channel"
  isRead       Boolean          @default(false)
  
  user         User             @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  actor        User             @relation("UserTriggeredNotifications", fields: [actorId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime         @default(now())
  
  @@map("notifications")
}


